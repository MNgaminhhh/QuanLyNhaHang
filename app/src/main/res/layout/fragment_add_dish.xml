<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".view.AddDishActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Món Mới"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telex"
                android:text="Tên món ăn :"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDishName"
                android:fontFamily="@font/telex"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá :"
                android:fontFamily="@font/telex"
                android:textSize="22sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDishPrice"
                android:fontFamily="@font/telex"
                android:textSize="22sp"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh :"
                android:fontFamily="@font/telex"
                android:textSize="22sp"/>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/picDish"
                android:scaleType="centerInside" />
            <Button
                android:id="@+id/btnUploadDish"
                android:layout_width="22dp"
                android:layout_height="44dp"
                android:background="@drawable/baseline_cloud_upload_24"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/telex"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/btnCancel"
            android:text="Quay lại"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/telex"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/btnAddNewD"
            android:text="Thêm"/>
    </LinearLayout>
</LinearLayout>